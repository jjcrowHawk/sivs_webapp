@model IEnumerable<MISIVSWebApp.Models.Opcion>

@{
    ViewBag.Title = "Index";
}

<div style="column-count:2;">
    <h2 style="margin-bottom:2%;">Option</h2>
    <p style="float:right; text-decoration:underline;">
        @Html.ActionLink("Create New Option", "Create")
    </p>
</div>
<table class="table">
    <tr>
        <th>
            Parent Item
            @*Html.DisplayNameFor(model => model.ItemVariable.nombre)*@
        </th>
        <th>
            name
            @*Html.DisplayNameFor(model => model.nombre)*@
        </th>
        <th>
            active
            @*Html.DisplayNameFor(model => model.activo)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemVariable.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.activo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
